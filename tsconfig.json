{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src/",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es2019",
    "pretty": true,
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*", "test/**/*"]
}
